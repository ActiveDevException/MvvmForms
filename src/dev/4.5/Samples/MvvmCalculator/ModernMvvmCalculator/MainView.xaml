<Page
    x:Class="ModernMvvmCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernMvvmCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel>
            <Rectangle Width="200" Height="Auto" RelativePanel.LeftOf="historyListBox"  x:Name="testRect" Fill="Azure"/>
            <TextBlock RelativePanel.Above="historyListBox" x:Name="historyTextBlock" Text="History" Margin="5,5,10,5"/>
            <ListBox RelativePanel.AlignRightWithPanel="True" x:Name="historyListBox" Grid.Row="0" Width="400" Height="200"/>
            <TextBlock RelativePanel.Below="historyListBox" RelativePanel.AlignRightWithPanel="True" 
                 x:Name="resultTextBlock" Height="50"
                 TextWrapping="Wrap" 
                 Text="TextBox" 
                 FontFamily="Consolas" 
                 FontSize="24" 
                 TextAlignment="Right" 
                 VerticalAlignment="Center"/>
            <TextBox RelativePanel.Below="resultTextBlock" x:Name="formularTextBox" Grid.Row="2" TextWrapping="Wrap" Text="TextBox"/>
        </RelativePanel>
    </Grid>
</Page>
